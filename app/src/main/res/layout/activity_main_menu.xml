<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.jaxbot.skimap.MainMenu"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/MtnBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="184dp"
        android:layout_height="127dp"
        android:background="@android:color/holo_green_dark"
        android:drawableRight="@mipmap/ic_mountain"
        android:onClick="buttonOnClick"
        android:text="Find a Mountain"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteY="113dp" />

    <Button
        android:id="@+id/SessionBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="184dp"
        android:layout_height="127dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="113dp"
        android:background="@android:color/holo_red_light"
        android:drawableRight="@mipmap/ic_launcher"
        android:text="Start a Session"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/MtnBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/pastMtnBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="184dp"
        android:layout_height="127dp"
        android:background="@android:color/holo_orange_dark"
        android:drawableRight="@mipmap/ic_past_mountain"
        android:text="Your Mountains"
        app:layout_constraintBaseline_toBaselineOf="@+id/pastSessonsBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.07" />

    <Button
        android:id="@+id/pastSessonsBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="184dp"
        android:layout_height="127dp"
        android:layout_marginEnd="16dp"
        android:background="#9932CC"
        android:drawableRight="@mipmap/ic_past_session"
        android:text="Past Sessions"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="129dp"
        app:layout_constraintTop_toBottomOf="@+id/SessionBtn"
        android:layout_marginBottom="129dp"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
